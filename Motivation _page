  <div class="confetti" id="confetti"></div>

  <script>
    // Quotes (Teacher‚Äôs Day + DevOps energy)
    const QUOTES = [
      { q: "Automate the boring, celebrate the learning.", a: "DevOps Teacher" },
      { q: "Small daily improvements beat rare home runs.", a: "Kaizen Mindset" },
      { q: "CI/CD is not tools, it‚Äôs trust on repeat.", a: "Delivery Wisdom" },
      { q: "Logs are the diary of your systems‚Äîread them daily.", a: "Ops Guru" },
      { q: "Ship. Measure. Learn. Iterate.", a: "Lean Dev" },
      { q: "Your bash history is your progress report.", a: "Terminal Sensei" },
      { q: "Version control your life: commit, don‚Äôt quit.", a: "Git Mentor" },
      { q: "Treat incidents as teachers, not enemies.", a: "SRE Sage" },
      { q: "If it hurts, do it more often‚Äîuntil it doesn‚Äôt.", a: "Agile Axiom" },
      { q: "Good tests are kind teachers; they reveal truth early.", a: "Quality Coach" }
    ];

    const isTeachersDay = (() => {
      const d = new Date();
      // India celebrates Teacher's Day on Sept 5
      return d.getMonth() === 8 && d.getDate() === 5;
    })();

    // UI elements
    const quoteText = document.getElementById('quoteText');
    const quoteBy = document.getElementById('quoteBy');
    const newBtn = document.getElementById('newBtn');
    const copyBtn = document.getElementById('copyBtn');
    const shareBtn = document.getElementById('shareBtn');
    const streakText = document.getElementById('streakText');
    const tag = document.getElementById('todayTag');
    const confettiWrap = document.getElementById('confetti');
    const confettiBtn = document.getElementById('confettiBtn');

    // Teacher‚Äôs Day tag tweak
    tag.textContent = isTeachersDay ? "Teacher‚Äôs Day Special ‚Ä¢ Thank you, Teachers!" : "Daily DevOps ‚Ä¢ Keep shipping";

    // Streak logic via localStorage
    const STREAK_KEY = "devops_streak";
    const LAST_KEY = "devops_last_day";
    function initStreak(){
      const today = new Date(); today.setHours(0,0,0,0);
      const last = localStorage.getItem(LAST_KEY);
      let streak = parseInt(localStorage.getItem(STREAK_KEY) || "0", 10);

      if(!last){
        streak = 1;
      } else {
        const d = new Date(parseInt(last, 10));
        const diff = (today - d) / 86400000;
        if(diff === 1) streak += 1;
        else if(diff > 1) streak = 1; // reset if gap
      }
      localStorage.setItem(STREAK_KEY, String(streak));
      localStorage.setItem(LAST_KEY, String(today.getTime()));
      streakText.innerHTML = `Streak: <b>${streak}</b> days`;
    }

    // Quote functions
    function pickQuote(){
      const { q, a } = QUOTES[Math.floor(Math.random() * QUOTES.length)];
      quoteText.textContent = `‚Äú${q}‚Äù`;
      quoteBy.textContent = `‚Äî ${a}`;
    }

    async function copyQuote(){
      const text = `${quoteText.textContent} ${quoteBy.textContent}`;
      try{
        await navigator.clipboard.writeText(text);
        toast("Copied to clipboard");
      }catch{
        // fallback
        const ta = document.createElement('textarea');
        ta.value = text; document.body.appendChild(ta);
        ta.select(); document.execCommand('copy'); ta.remove();
        toast("Copied");
      }
    }

    async function shareQuote(){
      const text = `${quoteText.textContent} ${quoteBy.textContent}`;
      if(navigator.share){
        try { await navigator.share({ text }); }
        catch(e){ /* user canceled */ }
      } else {
        copyQuote();
      }
    }

    // Tiny toast
    function toast(msg){
      const t = document.createElement('div');
      t.textContent = msg;
      t.style.cssText = `
        position:fixed; left:50%; top:20px; transform:translateX(-50%);
        background:#0b1222ee; color:#dff1ff; border:1px solid #37507d; 
        padding:10px 14px; border-radius:10px; z-index:99999; 
        box-shadow:0 10px 28px #0008; font-size:14px;
      `;
      document.body.appendChild(t);
      setTimeout(()=>{ t.remove(); }, 1500);
    }

    // Confetti for Teacher's Day
    function confetti(){
      for(let i=0; i<90; i++){
        const s = document.createElement('i');
        const left = Math.random()*100;
        const delay = Math.random()*600;
        const colors = ['#22d3ee','#60a5fa','#a78bfa','#f472b6','#34d399','#fbbf24'];
        s.style.left = left + 'vw';
        s.style.background = colors[i % colors.length];
        s.style.animationDelay = delay + 'ms';
        confettiWrap.appendChild(s);
        setTimeout(()=>s.remove(), 1600);
      }
    }

    // Progress bars: click to mark done
    document.querySelectorAll('.progress').forEach(p=>{
      p.addEventListener('click', ()=>{
        const done = p.style.getPropertyValue('--p') === '100%';
        p.style.setProperty('--p', done ? '0%' : '100%');
      });
    });

    // Events
    newBtn.addEventListener('click', pickQuote);
    copyBtn.addEventListener('click', copyQuote);
    shareBtn.addEventListener('click', shareQuote);
    confettiBtn.addEventListener('click', confetti);

    // Init
    initStreak();
    if(isTeachersDay) setTimeout(confetti, 500);
  </script>
</body>
</html>
